<UserControl x:Class="InfTrimMarks.NumericUpDown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:InfTrimMarks"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <local:DoubleTextBox x:Name="numericTextBox" Width="60" Height="24" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
        <StackPanel HorizontalAlignment="Left" Margin="2,0,0,0" VerticalAlignment="Center">
            <RepeatButton Name="upButton" Click="upButton_Click" Height="12" Width="16" Content="&#x25B2;" FontSize="7" Padding="0,-2,0,0"/>
            <RepeatButton Name="downButton" Click="downButton_Click" Height="12" Width="16" Content="&#x25BC;" FontSize="7" Padding="0,-2,0,0"/>
        </StackPanel>
    </DockPanel>
</UserControl>
