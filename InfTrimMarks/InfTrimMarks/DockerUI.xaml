<UserControl x:Class="InfTrimMarks.DockerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfTrimMarks"
             mc:Ignorable="d" 
             MinWidth="225">
    <Grid Margin="5,5,5,5">
        <StackPanel>
            <ListBox Name="lbPresetsList" MaxHeight="110" SelectedIndex="0">
                <ListBoxItem>Item 1</ListBoxItem>
                <ListBoxItem>Item 2</ListBoxItem>
                <ListBoxItem>Item 3</ListBoxItem>
                <ListBoxItem>Item 4</ListBoxItem>
                <ListBoxItem>Item 5</ListBoxItem>
                <ListBoxItem>Item 6</ListBoxItem>
                <ListBoxItem>Item 7</ListBoxItem>
                <ListBoxItem>Item 8</ListBoxItem>
                <ListBoxItem>Item 9</ListBoxItem>
                <ListBoxItem>Item 10</ListBoxItem>
            </ListBox>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <StackPanel>
                    <CheckBox Name="ckbWhiteSubMark" Content="White SubMark" Margin="0,7,0,0" IsChecked="True"></CheckBox>
                    <DockPanel Margin="0,7,0,0" Height="auto">
                        <local:DoubleTextBox x:Name="tbOffset" Width="55"></local:DoubleTextBox>
                        <TextBlock Margin="5,0,3,0" Text="Offset"></TextBlock>
                    </DockPanel>
                    <DockPanel Margin="0,7,0,0" Height="auto">
                        <local:DoubleTextBox x:Name="tbMarkHeight" Width="55"></local:DoubleTextBox>
                        <TextBlock Margin="5,0,3,0" Text="Mark height"></TextBlock>
                    </DockPanel>
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Label Content="Exclude edges" HorizontalAlignment="Center"></Label>
                    <Grid Width="54" Height="54" HorizontalAlignment="Center">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <CheckBox Name="ckbTop" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" IsChecked="True"></CheckBox>
                        <CheckBox Name="ckbLeft"  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                        <CheckBox Name="ckbRight" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                        <CheckBox Name="ckbBottom" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"></CheckBox>
                    </Grid>
                </StackPanel>
            </Grid>
            <Separator Margin="0,10,0,0"></Separator>
            <Button HorizontalAlignment="Right" Padding="15,2,15,2" Content="Make CropMark" Margin="0,10,0,0" Click="doSmartTrimMark"></Button>
